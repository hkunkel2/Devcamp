

<main role="main" class="container">

  <h1 class="pb-3 mb-4 font-italic border-bottom">
    My Blogs
  </h1>

  <div class="row">
    <div class="col-md-8 blog-main">

      <%= link_to 'Write a New Blog', new_blog_path if logged_in?(:site_admin) %>

      <%= render 'blogs/blog_sidebar' %>

      <%= render @blogs %>

      <%= paginate @blogs %>

    </div><!-- /.blog-main -->

    <%= render 'blogs/blog_sidebar' %>

  </div><!-- /.row -->

</main><!-- /.container -->




