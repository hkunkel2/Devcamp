<%= form_with(model: blog, local: true) do |form| %>

<%= render 'shared/error_messages', obj: blog %>

  <div class="form-group">
    <%= form.text_field :title, class: 'form-control', placeholder: "Title" %></br>
  </div>

  <div class="form-group">
    <%= form.text_area :body, class: 'form-control', rows: 15, placeholder: "Content" %></br>
  </div>

    <div class="form-group">
      <%= form.submit "Submit", class: 'btn btn-primary btn-lg' %>
    </div>


<% end %>
