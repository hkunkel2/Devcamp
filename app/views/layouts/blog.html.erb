<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="keywords" content="<%=@seo_keywords%>" />

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/le-frog/jquery-ui.min.css' %>
    
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <div class="container blog-body col-9">

      <%= render 'shared/blog_nav-bar' %>

      <div class="row justify-content-center">
        <div class="col-9">
          <%= yield %>
        </div>
        <div class="col-3">
          <%= render 'shared/blog_sidebar' %>
        </div>
      </div>
    
      
  
      <%= source_helper("Blog") %>
  
  
      <% if session[:source] %>
        Thanks for visting me from <%= session[:source] %>
      <% end %>
    </div>
  </body>

    <%= render 'shared/blog_footer' %>

</html>
